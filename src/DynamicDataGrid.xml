            <propertyGroup caption="Row">
                <property key="referenceRow" type="association" selectableObjects="dataSourceRow" dataSource="dataSourceCell">
                    <caption>Reference</caption>
                    <description />
                    <associationTypes>
                        <associationType name="Reference" />
